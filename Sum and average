#include<stdio.h>

int main(){

	float a[100],sum=0,avg;	int i,n;

	printf("enter n:");

	scanf("%d",&n);

	printf("enter numbers :\n");

	for(i=0;i<n;i++)

	{

		printf("a[%d]=",i);

		scanf("%f",&a[i]);

	}

	for(i=0;i<n;i++)

	{

		sum=sum+a[i];

	}

		avg=sum/n;

		printf("sum is %f\n",sum);

		printf("average is %f",avg);

		return 0;

	

}
